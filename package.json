{
  "name": "vue-pixel-board",
  "version": "0.2.0",
  "description": "A component for VueJs that provides a pixels drawing board",
  "author": {
    "name": "Abdelrahman Abounegm",
    "email": "aabounegm@gmail.com"
  },
  "repository": "github:aabounegm/vue-pixel-board",
  "license": "MIT",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-bundle": "vue-cli-service build --target lib --name vue-pixel-board ./src/components/Board.vue",
    "build-wc": "vue-cli-service build --target wc --inline-vue --name vue-pixel-board ./src/components/Board.vue",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit"
  },
  "main": "./dist/vue-pixel-board.common.js",
  "unpkg": "./dist/vue-pixel-board.umd.min.js",
  "browser": {
    "./sfc": "./src/components/Board.vue"
  },
  "sideEffects": false,
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^4.11.1",
    "@vue/cli-plugin-eslint": "^4.5.9",
    "@vue/cli-plugin-typescript": "^4.5.9",
    "@vue/cli-service": "^4.5.9",
    "eslint": "^7.17.0",
    "eslint-plugin-vue": "^7.4.0",
    "typescript": "^3.9.7",
    "vue": "^2.6.12",
    "vue-template-compiler": "^2.6.12"
  },
  "files": [
    "dist/*",
    "src/*",
    "*.json",
    "*.md",
    "*.ts",
    "*.js"
  ]
}
